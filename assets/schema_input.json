{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BAM pairs input schema",
  "description": "Samplesheet describing pairs of BAM files.",
  "type": "object",
  "properties": {
    "sample": {
      "type": "string",
      "description": "Sample name / ID"
    },
    "bam_1": {
      "type": "string",
      "format": "file-path",
      "exists": true,
      "pattern": "^\\S+\\.(bam|cram)$",
      "description": "Path to the primary BAM file"
    },
    "bam_2": {
      "type": "string",
      "format": "file-path",
      "exists": true,
      "pattern": "^\\S+\\.(bam|cram)$",
      "description": "Path to the contaminant BAM file"
    }
  },
  "required": ["sample", "bam_1", "bam_2"],
  "additionalProperties": false
}
